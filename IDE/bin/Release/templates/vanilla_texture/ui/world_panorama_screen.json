{
  "namespace": "world_panorama",

  // This is what is referenced in the mashup screen
  "map_pack_tab_content": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      { "pan_left@world_panorama.pan_left_button": { } },
      { "screenshot@panorama_input_panel": { } },
      { "pan_right@world_panorama.pan_right_button": { } }
    ]
  },

  "panorama_input_panel": {
    "type": "input_panel",
    "size": [ "100% - 38px", "100%" ],
    "layer": 2,
    "gesture_tracking_button": "button.scroll_map",
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.scroll_map",
        "mapping_type": "pressed",
        "button_up_right_of_first_refusal": true
      }
    ],
    "controls": [
      {
        "image_border@common.focus_border_white": {
          "color": [ 0, 0, 0 ],
          "controls": [
            {
              "key_art": {
                "type": "custom",
                "renderer": "panorama_renderer",
                "rotation": "gesture_x",
                "size": [ "100% - 2px", "100% - 2px" ],
                "bindings": [
                  {
                    "binding_name": "#panorama_texture",
                    "binding_name_override": "#texture"
                  },
                  {
                    "binding_name": "#panorama_texture_file_system",
                    "binding_name_override": "#texture_file_system"
                  },
                  {
                    "binding_name": "#panorama_view",
                    "binding_type": "global"
                  },
                  {
                    "binding_name": "#panorama_view",
                    "binding_type": "global"
                  },
                  {
                    "binding_type": "view",
                    "source_control_name": "screenshot",
                    "source_property_name": "#gesture_mouse_delta_x",
                    "target_property_name": "#gesture_mouse_delta_x"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },

  "chevron_image": {
    "type": "image",
    "layer": 2,
    "uv": [ 0, 0 ],
    "uv_size": [ 4, 7 ],
    "size": [ 4, 7 ],
    "texture": "$chevron_image_name"
  },


  "pan_button@common_buttons.light_glyph_button": {
    "$button_content": "world_panorama.chevron_image",
    "size": [ 20, "100%" ],
    "layer": 3
  },

  "pan_left_button@world_panorama.pan_button": {
    "anchor_from": "top_left",
    "anchor_to": "top_left",
    "$chevron_image_name": "textures/gui/newgui/chevron_left",
    "$pressed_button_name": "button.pan_left",
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.pan_left",
        "mapping_type": "pressed",
        "button_up_right_of_first_refusal": true
      }
    ]
  },

  "pan_right_button@world_panorama.pan_button": {
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "$chevron_image_name": "textures/gui/newgui/chevron_right",
    "$pressed_button_name": "button.pan_right",
    "button_mappings": [
      {
        "from_button_id": "button.menu_select",
        "to_button_id": "button.pan_right",
        "mapping_type": "pressed",
        "button_up_right_of_first_refusal": true
      }
    ]
  },


  // Screen

  "world_panorama_screen@common.base_screen": {
    "button_mappings": [
      {
        "from_button_id": "button.menu_cancel",
        "to_button_id": "button.menu_exit",
        "mapping_type": "global"
      },
      {
        "from_button_id": "button.menu_up",
        "to_button_id": "button.menu_up",
        "mapping_type": "global",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_down",
        "to_button_id": "button.menu_down",
        "mapping_type": "global",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_left",
        "to_button_id": "button.menu_left",
        "mapping_type": "global",
        "scope": "view"
      },
      {
        "from_button_id": "button.menu_right",
        "to_button_id": "button.menu_right",
        "mapping_type": "global",
        "scope": "view"
      }
    ],

    "$default_text_color": [ 0.3, 0.3, 0.3 ],
    "$screen_content": "world_panorama.dialog"
  },

  "dialog@common_dialogs.main_panel_no_buttons": {
    "size": "$store_world_screen_size",
    "$dialog_background": "dialog_background_hollow_3",
    "$show_close_button": true,
    "$text_name": "#world_title",
    "$title_text_binding_type": "global",
    "$child_control": "world_panorama.dialog_content"
  },

  "dialog_content": {
    "type": "panel",
    "controls": [      
      { "dialog_content_stack_panel@dialog_content_stack_panel": { } }
    ]
  },

  "dialog_content_stack_panel": {
    "type": "stack_panel",
    "orientation": "vertical",
    "size": [ "100% - 4px", "100%" ],
    "controls": [
      {
        "padding_0": {
          "type": "panel",
          "size": [ 0, 2 ]
        }
      },
      {
        "panorama@world_panorama.map_pack_tab_content": {
          "size": [ "100%", "100% - 34px" ]
        }
      },
      {
        "padding1": {
          "type": "panel",
          "size": [ "100%", 2 ]
        }
      },
      {
        "interaction_panel": {
          "type": "panel",
          "size": [ "100%", 28 ],
          "controls": [
            {
              "purchase_button@common_buttons.light_text_button": {
                "$pressed_button_name": "button.purchase",
                "$button_text_binding_type": "global",
                "$button_text": "#purchase_button_text",
                "bindings": [
                  {
                    "binding_name": "#purchase_button_visible",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            {
              "progress_bar@resource_pack_purchase.download_progress": { }
            }
          ]
        }
      },
      {
        "padding2": {
          "type": "panel",
          "size": [ "100%", 2 ]
        }
      }
    ]
  }  
}